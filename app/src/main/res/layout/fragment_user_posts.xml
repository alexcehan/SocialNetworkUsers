<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.ui.view.UserPostsFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/user_image"
        android:src="@drawable/sample_image"
        android:layout_marginTop="16dp"

        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplaybold"
        android:gravity="start"
        android:text="Alina Manolache"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_image" />


    <TextView
        android:id="@+id/user_name_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplayregular"
        android:gravity="start"
        android:text="alina1467@gmail.com"
        android:textColor="#717E99"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name" />

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplaybold"
        android:gravity="start"
        android:text="Ce mai mananca milenialii"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:background="#F7F8FB"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_email" />

    <TextView
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplayregular"
        android:gravity="start"
        android:text="Am dat peste o știre cum că milenialii trebuie să se informeze înainte să..."
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        android:background="#F7F8FB"
        android:textAlignment="textStart"
        android:textColor="#717E99"
        android:textSize="17sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_title" />






</androidx.constraintlayout.widget.ConstraintLayout>